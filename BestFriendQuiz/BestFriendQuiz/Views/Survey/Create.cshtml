@model BestFriendQuiz.Models.SurveyCreateViewModel

@{
    ViewData["Title"] = "Create Survey";
}

<h1>Create Survey</h1>

<form asp-action="Create" method="post">
    @for (int i = 0; i < Model.NumberOfQuestions; i++)
    {
      

        <div class="form-group">
            <label for="Questions[@i].SelectedQuestionId">Question @(i + 1):</label>
            <select asp-for="Questions[i].SelectedQuestionId" class="form-control">
                <option value="">Select a question</option>
                @foreach (var questionItem in Model.Questions)
                {
                    <option value="@questionItem.QuestionId">  @questionItem.QuestionText   - A:  @questionItem.Options[0].Text - B: @questionItem.Options[1].Text  - C:  @questionItem.Options[2].Text - D: @questionItem.Options[3].Text  - E: @questionItem.Options[4].Text</option>
                }
            </select>
            <label></label>
        </div>

        <div class="form-group">
            <label for="Questions[@i].SelectedOptionId">Right Option for Question @(i + 1):</label>
            <select asp-for="Questions[i].Option" class="form-control">
                <option value="">Select an option</option>
                <option value="A">A</option>
                <option value="B">B</option>
                <option value="C">C</option>
                <option value="D">D</option>
                <option value="E">E</option>

            </select>
        </div>
    }

    <button type="submit" class="btn btn-primary">Create</button>
</form>

